<div class="content_post" >
  <% if user_signed_in? && current_user.id == blog.user_id %>
    <div class="more">
      <span><%= image_tag 'arrow_top.png' %></span>
      <ul class="more_list">
        <li>
          <%= link_to '編集', "/miniapps/#{blog.id}/edit", method: :get %>
        </li>
        
        <li>
          <%= link_to '削除', "/miniapps/#{blog.id}", method: :delete %>
        </li>
      </ul>
    </div>
  <% end %>
    <%= simple_format(blog.text) %>
    <span class="name"><%= blog.name %></span>
</div>